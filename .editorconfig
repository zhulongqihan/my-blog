# EditorConfig 帮助开发者在不同的编辑器和 IDE 之间定义和维护一致的代码风格
# https://editorconfig.org

# 顶级配置文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Java 文件
[*.java]
indent_size = 4
max_line_length = 120

# XML 文件（包括 pom.xml）
[*.xml]
indent_size = 4

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# JSON 文件
[*.json]
indent_size = 2

# TypeScript/JavaScript 文件
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

# CSS/SCSS 文件
[*.{css,scss,sass}]
indent_size = 2

# Shell 脚本
[*.sh]
indent_size = 2
end_of_line = lf

# Batch 文件
[*.{bat,cmd}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab
